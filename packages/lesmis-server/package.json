{
  "name": "@tupaia/lesmis-server",
  "version": "0.0.0",
  "private": true,
  "description": "Backend server for LESMIS application",
  "homepage": "https://github.com/beyondessential/tupaia",
  "bugs": {
    "url": "https://github.com/beyondessential/tupaia/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/beyondessential/tupaia"
  },
  "author": "Beyond Essential Systems <admin@tupaia.org> (https://beyondessential.com.au)",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc -p tsconfig-build.json",
    "lint": "eslint . --ext .ts",
    "lint:all": "yarn lint \"src/**/*.{ts,jsx}\"",
    "lint:fix": "yarn lint --fix",
    "prestart": "yarn build",
    "start": "node dist",
    "start-dev": "LOG_LEVEL=debug ../../scripts/bash/backendStartDev.sh 9998 -ts",
    "start-verbose": "LOG_LEVEL=debug yarn start-dev",
    "test": "jest",
    "test:coverage": "jest --coverage",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "@tupaia/access-policy": "3.0.0",
    "@tupaia/database": "1.0.0",
    "@tupaia/server-boilerplate": "1.0.0",
    "@tupaia/utils": "1.0.0",
    "camelcase-keys": "^6.2.2",
    "dotenv": "^8.2.0",
    "express": "^4.16.2",
    "lodash.uniqby": "^4.7.0",
    "winston": "^3.2.1"
  },
  "devDependencies": {
    "eslint": "^7.9.0",
    "jest": "^27.0.6",
    "nodemon": "^2.0.4",
    "typescript": "^4.2.0"
  }
}
